// Firestore Security Rules for Drop App
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow all reads
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow Cloud Functions (Service Accounts) to write to partners collection
    match /partners/{uid} {
      allow read: if true;
      allow write: if true; // Allow Service Accounts
    }
  }
}